{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "lib": ["dom", "esnext", "dom.iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["./src", "./test"]
}
