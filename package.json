{
  "name": "solid-zustand",
  "version": "1.4.2",
  "description": "ðŸ» State management in Solid using zustand.",
  "publishConfig": {
    "directory": "package"
  },
  "keywords": [
    "solid",
    "state",
    "management",
    "store",
    "zustand"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wobsoriano/solid-zustand.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && npm publish",
    "lint": "eslint --ext=js,ts,jsx,tsx .",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "postpublish": "rimraf ./package"
  },
  "clean-publish": {
    "cleanDocs": true,
    "withoutPublish": true,
    "tempDir": "package"
  },
  "peerDependencies": {
    "solid-js": ">=1.4.0",
    "zustand": "^4.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.20.6",
    "bumpp": "^7.1.1",
    "clean-publish": "^4.0.0",
    "eslint": "^8.25.0",
    "eslint-plugin-solid": "^0.7.3",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "solid-js": "^1.6.0",
    "tsup": "^5.12.6",
    "typescript": "4.6.3",
    "vite-plugin-solid": "^2.2.6",
    "vitest": "^0.7.13",
    "zustand": "^4.1.2"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "plugin:solid/typescript",
      "@antfu/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/semi": [
        2,
        "always"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
