{
  "name": "solid-zustand",
  "version": "1.7.0",
  "description": "üêª State management in Solid using zustand.",
  "publishConfig": {
    "directory": "package"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wobsoriano/solid-zustand.git"
  },
  "keywords": [
    "solid",
    "state",
    "management",
    "store",
    "zustand"
  ],
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && npm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update-deps": "taze -w && pnpm i",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "postpublish": "rimraf ./package"
  },
  "clean-publish": {
    "cleanDocs": true,
    "withoutPublish": true,
    "tempDir": "package"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.42.0",
    "@babel/core": "^7.22.19",
    "bumpp": "^9.2.0",
    "clean-publish": "^4.2.0",
    "eslint": "^8.49.0",
    "eslint-plugin-solid": "^0.13.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "solid-js": "^1.7.11",
    "taze": "^0.11.2",
    "tsup": "^7.2.0",
    "typescript": "5.2.2",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "^0.34.4",
    "zustand": "^4.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "plugin:solid/typescript",
      "@antfu/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/semi": [
        2,
        "always"
      ]
    }
  }
}
